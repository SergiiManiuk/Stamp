//- ================
//- Inline Anchor
//- ================

mixin a(link)
  a(href="", target="_blank")
    block


//- ================
//- Inline Image
//- ================

mixin img(alt, file, global)
  if global
    img(alt="#{alt}", src="#{globalAssetUrl}#{globalImageUrl}#{file}")
  else
    img(alt="#{alt}", src="#{templateAssetUrl}#{templateImageUrl}#{file}")
